# Base Image for builder
FROM python:3.12-slim AS builder

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install UV
RUN curl -sSf https://install.determinate.systems/uv | sh -s -- --yes

# Set up workdir
WORKDIR /app

# Copy package metadata files
COPY pyproject.toml LICENSE README.md MANIFEST.in HISTORY.md ./

# Copy package code
COPY fast_api_template ./fast_api_template

# Install with UV
RUN /root/.cargo/bin/uv pip install --no-cache-dir --system .

# Build the final image
FROM python:3.12-slim

# Install curl for healthcheck
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create directory for the app user
RUN mkdir -p /home/app

# Create the app user
RUN groupadd app && useradd -g app app

# Create the home directory
ENV HOME=/home/app
ENV APP_HOME=/home/app/web
RUN mkdir $APP_HOME
WORKDIR $APP_HOME

# Copy only the installed packages from builder
COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code
COPY . $APP_HOME

# Set permissions
RUN chown -R app:app $APP_HOME

# Use non-root user
USER app

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application with hot reload for development
CMD ["uvicorn", "fast_api_template.app:app", "--host=0.0.0.0", "--port=8000", "--reload"]
